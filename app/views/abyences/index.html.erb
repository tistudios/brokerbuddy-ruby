<p id="notice"><%= notice %></p>

<h1>Abyences</h1>

<table>
  <thead>
    <tr>
      <th>Policy client name</th>
      <th>Policy renewal</th>
      <th>Insurer</th>
      <th>Remind date</th>
      <th>Reminder message</th>
      <th>Underwriter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @abyences.each do |abyence| %>
      <tr>
        <td><%= abyence.policy_client_name %></td>
        <td><%= abyence.policy_renewal %></td>
        <td><%= abyence.insurer %></td>
        <td><%= abyence.remind_date %></td>
        <td><%= abyence.reminder_message %></td>
        <td><%= abyence.underwriter %></td>
        <td><%= link_to 'Show', abyence %></td>
        <td><%= link_to 'Edit', edit_abyence_path(abyence) %></td>
        <td><%= link_to 'Destroy', abyence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

